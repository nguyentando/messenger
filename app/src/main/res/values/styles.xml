<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/blue_light</item>
        <item name="colorControlHighlight">@color/blue_light</item>

    </style>

    <!-- For messages screen -->
    <style name="MessageItem">
        <item name="android:paddingTop">@dimen/margin_tiny</item>
        <item name="android:paddingStart">@dimen/margin_normal</item>
        <item name="android:paddingEnd">@dimen/margin_normal</item>
        <item name="android:paddingBottom">@dimen/margin_tiny</item>
        <item name="android:background">@drawable/bg_message_item</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MessageContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AttachmentContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipChildren">false</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/attachment_card_elevation</item>
    </style>

</resources>
